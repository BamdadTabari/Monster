{
  "ReverseProxy": {
    "Routes": {
      "content": {
        "ClusterId": "contentCluster",
        "Match": { "Path": "/content/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/content" }
        ]
      },
      "identity": {
        "ClusterId": "identityCluster",
        "Match": { "Path": "/identity/{**catch-all}" },
        "Transforms": [
          { "PathRemovePrefix": "/identity" }
        ]
      }
    },
    "Clusters": {
      "contentCluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5081/" }
        }
      },
      "identityCluster": {
        "Destinations": {
          "d1": { "Address": "http://localhost:5082/" }
        }
      }
    }
  },
  "Serilog": { "MinimumLevel": "Information", "WriteTo": [ { "Name": "Console" } ] }
}
