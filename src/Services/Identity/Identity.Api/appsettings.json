{
 "ConnectionStrings": {
    "IdentityDb": "Host=localhost;Port=5432;Database=monster_identity;Username=monster;Password=monster"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": { "path": "logs/log-.txt", "rollingInterval": "Day" }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Jwt": {
    "Issuer": "monster",
    "Audience": "monster-api",
    "SigningKey": "very-long-dev-secret-change-me-123",
    "AccessTokenMinutes": 30,
    "RefreshTokenDays": 14
  },
  "Swagger": {
  "Title": "Monster Platform API",
  "Description": "Enterprise-grade API with Identity, Content, and Gateway services.",
  "Contact": {
    "Name": "Monster Dev Team",
    "Email": "support@monster.com",
    "Url": "https://monster.com"
  },
  "License": {
    "Name": "MIT",
    "Url": "https://opensource.org/licenses/MIT"
  }
}
}
